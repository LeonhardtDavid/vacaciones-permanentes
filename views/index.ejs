<!DOCTYPE html>
<html>
<head>
<head lang="es">
    <meta charset="UTF-8">

    <title>Vacaciones Permanentes</title>
    <link href="/stylesheets/style.min.css" rel="stylesheet">

    <script src="/components/jquery/dist/jquery.min.js"></script>
    <script src="/components/angular/angular.min.js"></script>
    <script src="/components/angular-i18n/angular-locale_es.js" type="text/javascript"></script>
    <script src="/components/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="/components/angular-bootstrap/ui-bootstrap.min.js"></script>
    <script src="/components/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>

    <script src="/javascripts/config-run.js"></script>
    <script src="/javascripts/controllers.js"></script>
    <script src="/javascripts/directives.js"></script>
    <script src="/javascripts/factories.js"></script>
    <script src="/javascripts/angularApp.js"></script>

    <style>
    </style>
</head>
<body ng-app="vacacionesPermanentes">

<div class="container">

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation" ng-controller="NavCtrl">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" ng-show="isLoggedIn()">{{ currentUser() }}</a>
                <a class="navbar-brand" ng-hide="isLoggedIn()">&nbsp;</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-9">
                <ul class="nav navbar-nav">
                    <li>
                        <!--<a ui-sref="{{xx}}">{{XX}}</a>-->
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li ng-show="isLoggedIn()">
                        <a ng-click="logOut()">
                            <span class="glyphicon glyphicon-log-out"></span>
                            Log Out
                        </a>
                    </li>
                    <li ng-hide="isLoggedIn()">
                        <a ui-sref="login">
                            <span class="glyphicon glyphicon-log-in"></span>
                            Log In
                        </a>
                    </li>
                    <li ng-hide="isLoggedIn()">
                        <a ui-sref="register">
                            <span class="glyphicon glyphicon-flag"></span>
                            Registrarme
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="row">
        <div class="col-md-12" ui-view="loginRegisterView">
        </div>
    </div>

    <div class="row">
        <div class="col-md-5" ui-view="listView">
        </div>
        <div class="col-md-7" ui-view="detailView">
        </div>
    </div>

</div>

</body>
</html>