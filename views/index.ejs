<!DOCTYPE html>
<html>
<head lang="es">
    <meta charset="UTF-8">

    <title>Vacaciones Permanentes</title>

    <!-- bower:css-->
    <link rel="stylesheet" href="/lib/angular-ui-bootstrap-datetimepicker/datetimepicker.css" />
    <link rel="stylesheet" href="/lib/angular-google-places-autocomplete/src/autocomplete.css" />
    <link rel="stylesheet" href="/lib/fullcalendar/dist/fullcalendar.css" />
    <!-- endbower-->

    <link href="/stylesheets/style.min.css" rel="stylesheet">

    <script src="https://maps.googleapis.com/maps/api/js?libraries=places&sensor=false"></script>

    <!-- bower:js-->
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/angular/angular.js"></script>
    <script src="/lib/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="/lib/angular-ui-router/release/angular-ui-router.js"></script>
    <script src="/lib/moment/moment.js"></script>
    <script src="/lib/angular-moment/angular-moment.js"></script>
    <script src="/lib/angular-ui-bootstrap-datetimepicker/datetimepicker.js"></script>
    <script src="/lib/angular-google-places-autocomplete/src/autocomplete.js"></script>
    <script src="/lib/lodash/lodash.js"></script>
    <script src="/lib/angular-google-maps/dist/angular-google-maps.js"></script>
    <script src="/lib/fullcalendar/dist/fullcalendar.js"></script>
    <script src="/lib/angular-ui-calendar/src/calendar.js"></script>
    <!-- endbower-->

    <script src="/lib/angular-i18n/angular-locale_es.js" type="text/javascript"></script>
    <script src="/javascripts/app.js"></script>

</head>
<body ng-app="vacacionesPermanentes">

<div class="container">

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation" ng-controller="NavCtrl">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" ng-show="isLoggedIn()">{{ currentUser() }}</a>
                <a class="navbar-brand" ng-hide="isLoggedIn()">&nbsp;</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-9">
                <ul class="nav navbar-nav">
                    <li>
                        <!--<a ui-sref="{{xx}}">{{XX}}</a>-->
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li ng-show="isLoggedIn()">
                        <a ng-click="logOut()">
                            <span class="glyphicon glyphicon-log-out"></span>
                            Log Out
                        </a>
                    </li>
                    <li ng-hide="isLoggedIn()">
                        <a ui-sref="login">
                            <span class="glyphicon glyphicon-log-in"></span>
                            Log In
                        </a>
                    </li>
                    <li ng-hide="isLoggedIn()">
                        <a ui-sref="register">
                            <span class="glyphicon glyphicon-flag"></span>
                            Registrarme
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="row">
        <div class="col-md-12" ui-view="loginRegisterView">
        </div>
    </div>

    <div class="row">
        <div class="col-md-5" ui-view="listView">
        </div>
        <div class="col-md-7" ui-view="detailView">
        </div>
    </div>

</div>

</body>
</html>
